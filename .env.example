# ===================================
# REQUIRED ENVIRONMENT VARIABLES
# ===================================

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/mybidfit
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mybidfit
DB_USER=username
DB_PASSWORD=password

# Server Configuration (Required)
PORT=3001
NODE_ENV=development

# JWT Configuration (Required)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY=24h

# ===================================
# OPTIONAL ENVIRONMENT VARIABLES
# ===================================

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Rate Limiting - General API
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Rate Limiting - Auth Endpoints (stricter)
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5
RATE_LIMIT_AUTH_SKIP_SUCCESSFUL=false
RATE_LIMIT_AUTH_SKIP_FAILED=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_MAX_AGE=86400000
SECURE_COOKIES=false
SAME_SITE=lax

# API Keys (for future AI integration)
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# External Service APIs (for future integration)
SAM_GOV_API_KEY=
GRANTS_GOV_API_KEY=
FBO_API_KEY=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@mybidfit.com
EMAIL_ENABLED=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,txt,png,jpg,jpeg

# Feature Flags
FEATURE_AI_SCORING=false
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_PARTNER_MATCHING=false

# Performance Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT_MS=30000
REQUEST_TIMEOUT_MS=30000