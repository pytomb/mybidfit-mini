# MyBidFit Production Environment Configuration

# Database (Production - Update these values for your production database)
DATABASE_URL=postgresql://mybidfit_user:secure_password@production-host:5432/mybidfit_prod
DB_HOST=production-host
DB_PORT=5432
DB_NAME=mybidfit_prod
DB_USER=mybidfit_user
DB_PASSWORD=secure_password

# Server
PORT=3001
NODE_ENV=production

# Security
JWT_SECRET=super-secure-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRY=24h

# API Keys (for future OpenRouter/OpenAI integration)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENAI_API_KEY=your-openai-api-key

# Logging
LOG_LEVEL=info

# CORS - Add your production domain
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://staging.yourdomain.com

# Rate Limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Production Security Headers
SECURE_COOKIES=true
HTTPS_ONLY=true

# Analytics and Monitoring
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn-for-error-monitoring

# Performance
CONNECTION_POOL_MAX=50
CONNECTION_POOL_IDLE_TIMEOUT=30000
QUERY_TIMEOUT=30000